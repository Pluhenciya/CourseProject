@model AutodorInfoSystem.Models.Task

@{
    ViewData["Title"] = "Создание задачи";
}

<h1 class="mb-4">Cоздание задачи</h1>

<div class="card p-4">
    <div class="row">
        <div class="col">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" for="Name">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Name">Описание</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="hidden" name="IdProject" value="@ViewBag.IdProject" />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-check">
                        </i>
                        Создать
                    </button>
                </div>
            </form>
            <div class="mt-3">
                <a asp-action="Details" asp-controller="Projects" asp-route-id="@ViewBag.IdProject" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left">
                    </i>
                    Назад
                </a>
            </div>
        </div>
    </div>
</div>

