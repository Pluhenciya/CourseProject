@model AutodorInfoSystem.Models.Task

@{
    ViewData["Title"] = Model.Name;
}

<h1 class="mb-4">Редактировние проекта</h1>

<div class="card p-4">
    <div class="row">
        <div class="col">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdProject" />
                <div class="form-group">
                    <label class="control-label" for="Name">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Description">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input asp-for="IdProject" class="form-control" hidden />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-check">
                        </i>
                        Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-outline-primary" asp-action="Index">Назад к списку</a>
    </div>
</div>

