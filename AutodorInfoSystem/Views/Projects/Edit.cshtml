@model AutodorInfoSystem.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Редактировать проект</h1>

<div class="card p-4">
    <h4 class="mb-3">Проект</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdProject" />
                <div class="form-group">
                    <label class="control-label" for="Name">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Description">Описание</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="IsCompleted" class="form-check-input" />
                    <label class="form-check-label" for="IsCompleted">Завершено</label>
                    <span asp-validation-for="IsCompleted" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-outline-primary" asp-action="Index">Назад к списку</a>
    </div>
</div>
