@model AutodorInfoSystem.Models.Project

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-light text-dark">
            <div class="card-body">
                <h1 class="card-title">
                    <i class="fas fa-plus-circle">
                    </i>
                    Create Project
                </h1>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                        <i class="fas fa-exclamation-circle">
                        </i>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">
                        </label>
                        <input asp-for="Name" class="form-control" data-bs-toggle="tooltip" data-bs-placement="top" title="Enter the project name" />
                        <span asp-validation-for="Name" class="text-danger">
                        </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">
                        </label>
                        <input asp-for="Description" class="form-control" data-bs-toggle="tooltip" data-bs-placement="top" title="Enter the project description" />
                        <span asp-validation-for="Description" class="text-danger">
                        </span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-check">
                            </i>
                            Create
                        </button>
                    </div>
                </form>
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-link">
                        <i class="fas fa-arrow-left">
                        </i>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
