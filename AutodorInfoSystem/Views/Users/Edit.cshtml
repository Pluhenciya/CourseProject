@model AutodorInfoSystem.Models.User

@{
    ViewData["Title"] = "Редактирования пользователя";
}

<h1>Редактирования пользователя</h1>

<div class="card p-4">
    <div class="row">
        <div class="col">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdUser" />
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Логин</label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Role" class="control-label">Роль</label>
                    <select asp-for="Role" class="form-control" onchange="toggleProjecterFields(this.value)">
                        <option value="Admin">Администратор</option>
                        <option value="Projecter">Проектировщик</option>
                    </select>
                </div>
                <div id="projecterFields" style="display:@(Model.Role == "Projecter" ? "block" : "none")">
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label">Фамилия</label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Имя</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Patronymic" class="control-label">Отчество</label>
                        <input asp-for="Patronymic" class="form-control" />
                        <span asp-validation-for="Patronymic" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-check"></i>
                        Создать
                    </button>
                </div>
                <div class="mt-3">
                    <a asp-controller="Users" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i>
                        Назад
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/register.js"></script>
}
