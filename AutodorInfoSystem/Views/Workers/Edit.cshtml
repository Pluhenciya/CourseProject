@model AutodorInfoSystem.Models.Worker

@{
    ViewData["Title"] = @Model.Name;
}

<h1 class="mb-4">@Model.Name</h1>

<div class="card p-4">
    <div class="row">
        <div class="col">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="IdWorker" hidden />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Должность</label>
                    <input asp-for="Name" class="form-control" id="workerName" onkeyup="fetchSimilarNames()" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <ul id="suggestions" class="list-group mt-2" style="display:none;"></ul> <!-- Список для автозаполнения -->
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label">Зарплата</label>
                    <input asp-for="Salary" class="form-control" id="workerSalary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Количество</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <input type="hidden" name="IdTask" value="@ViewBag.IdTask" />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-check"></i>
                        Сохранить
                    </button>
                </div>
                <div class="mt-3">
                    <a asp-controller="Tasks" asp-action="Details" asp-route-id="@ViewBag.IdTask" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i>
                        Назад
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/create-and-edit-worker.js"></script>
}


