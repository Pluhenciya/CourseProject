@model AutodorInfoSystem.Models.Worker

@{
    ViewData["Title"] = @Model.Name;
}

<h1 class="mb-4">@Model.Name</h1>

<div class="card p-4">
    <div class="row">
        <div class="col">
            <form asp-action="SimpleEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdWorker" />
                <div class="form-group">
                    <label class="control-label" for="Name">Должность</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Price">Зарплата</label>
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-check"></i>
                        Создать
                    </button>
                </div>
            </form>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i>
                    Назад
                </a>
            </div>
        </div>
    </div>
</div>