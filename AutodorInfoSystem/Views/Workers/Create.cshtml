@model AutodorInfoSystem.Models.Worker

@{
    ViewData["Title"] = "Добавление рабочих";
}

<h1 class="mb-4">Добавление рабочих</h1>

<div class="card p-4">
    <div class="row">
        <div class="col">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Должность</label>
                    <input asp-for="Name" class="form-control" id="workerName" onkeyup="fetchSimilarNames()" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <ul id="suggestions" class="list-group mt-2" style="display:none;"></ul> <!-- Список для автозаполнения -->
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label">Зарплата</label>
                    <input asp-for="Salary" class="form-control" id="workerSalary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Количество</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <input type="hidden" name="IdTask" value="@ViewBag.IdTask" />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-check"></i>
                        Создать
                    </button>
                </div>
                <div class="mt-3">
                    <a asp-controller="Tasks" asp-action="Details" asp-route-id="@ViewBag.IdTask" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i>
                        Назад
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function fetchSimilarNames() {
            const nameInput = document.getElementById('workerName').value;
            const suggestionsList = document.getElementById('suggestions');
            const salaryInput = document.getElementById('workerSalary');

            if (nameInput.length === 0) {
                suggestionsList.style.display = 'none';
                salaryInput.value = ''; // Очищаем цену, если поле пустое
                return;
            }

            fetch(`/Workers/GetSimilarNames?name=${nameInput}`)
                .then(response => response.json())
                .then(data => {
                    suggestionsList.innerHTML = '';
                    if (data.length > 0) {
                        suggestionsList.style.display = 'block';
                        data.forEach(item => {
                            const li = document.createElement('li');
                            li.className = 'list-group-item list-group-item-action';
                            li.textContent = item.name; // Предполагается, что item содержит объект с полем name
                            li.dataset.salary = item.salary; // Сохраняем цену в атрибуте data-price
                            li.onclick = function () {
                                document.getElementById('workerName').value = item.name;
                                salaryInput.value = item.salary; // Заполняем цену
                                suggestionsList.style.display = 'none';
                                salaryInput.setAttribute('readonly', 'readonly'); // Делаем поле цены недоступным для редактирования
                            };
                            suggestionsList.appendChild(li);
                        });
                    } else {
                        suggestionsList.style.display = 'none';
                        salaryInput.removeAttribute('readonly'); // Делаем поле цены доступным для редактирования, если нет подсказок
                    }
                });
        }

        // Сбросить поле цены, если пользователь вводит новое название
        document.getElementById('workerName').addEventListener('input', function () {
            const salaryInput = document.getElementById('workerSalary');
            salaryInput.removeAttribute('readonly'); // Делаем поле цены доступным для редактирования
            salaryInput.value = ''; // Очищаем цену
        });
    </script>
}

